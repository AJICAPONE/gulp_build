// инпуты
.input-teamlight
  background-color transparent
  border: 1px solid rgba(56, 56, 56, 0.31);
  border-radius: 2px;
  width 100%
  font-family "Montserrat 400", sans-serif
  font-size 14px
  transition all linear .2s

  &:hover
    border: 1px solid color383838


  &:placeholder
    color rgba(56, 56, 56, 0.31)

.input-teamlight:hover::placeholder
  color color383838

// Кнопка фильра показать результаты
.teamlight-button-filter
  width 100%
  height 48px
  background-color transparent
  border: 1px solid rgba(56, 56, 56, 0.6);
  border-radius: 4px;
  transition all linear .2s

  &:hover
    border: 1px solid color383838

.teamlight-disable
  border: 1px solid rgba(56, 56, 56, 0.4);
  color rgba(56, 56, 56, 0.4);
  cursor: not-allowed;

  &:hover
    border: 1px solid rgba(56, 56, 56, 0.4) !important
    color rgba(56, 56, 56, 0.4) !important
  &:active
    border: 1px solid rgba(56, 56, 56, 0.4);
    color rgba(56, 56, 56, 0.4);

  .icon
    fill rgba(56, 56, 56, 0.4);

.teamlight-arrow-hover
  transition all linear .2s

  &:hover
    background-color color383838


    .icon
      fill #fff

  &:active
    background-color #222
  .icon
    transition  all linear .2s



// Ссылки

.teamlight-link
  color #00B2CB
  border-bottom 1px dashed #00B2CB
  font-family "Montserrat 500", sans-serif
  font-size 12px

  &:hover
    border-bottom 1px solid transparent
    color #00B2CB

.teamlight-buttons-buy
  display flex
  align-items center
  justify-content center
  width 100%
  font-family "Montserrat 600", sans-serif
  font-size 12px
  height 52px
  border-radius 2px
  transition all linear .2s
  cursor pointer

// Добавить в корзину

.product-content-added-to-cart,.product-content-added-to-cart2
  background-color color383838
  color #fff
  margin-bottom 8px
  position relative

  &:hover
    background-color #EE554B

  &:active
    background-color #F53B2F

.teamlight-disable-added-to-cart
  background-color #9B9B9B
  cursor no-drop

  &:hover
    background-color #9B9B9B

  &:active
    background-color #9B9B9B


// купить в 1 клик

.product-content-buy-1-click
  border 1px solid color383838
  transition all linear .2s

  &:hover
    border 1px solid #EE554B
    color #EE554B

  &:active
    border 1px solid #F53B2F
    color #F53B2F


// Disable купить в 1 клик

.teamlight-buy-1-click-disable
  border 1px solid #9B9B9B
  color #9B9B9B
  cursor no-drop

  &:hover
    border 1px solid #9B9B9B
    color #9B9B9B

  &:active
    border 1px solid #9B9B9B
    color #9B9B9B


.product-content-after--added-to-cart-wrap
  display flex
  position absolute
  right 0
  left 0
  top 0
  bottom 0
  width 100%
  opacity 0
  visibility hidden
  transition all linear .2s

.product-content-after--added-to-cart-wrap.active-added
  visibility visible
  opacity 1

.product-content-after--added
  display flex
  justify-content center
  flex-direction column
  align-items center
  width 78%
  background-color color383838
  color #fff
  border-radius 2px 0 0 2px

  &:hover
    color inherit
.product-content-after--added span
  margin-bottom 3px

.product-content-after--added span:nth-child(2)
  font-family "Montserrat 400", sans-serif
  font-size 10px
  margin-bottom 0

.product-content-after--added-plus
  display flex
  align-items center
  justify-content center
  background-color #fff
  color color383838
  position relative
  width 64px
  border 1px solid color383838
  border-radius 0 2px 2px 0
  transition all linear .2s

  &:hover
    background-color #7DB408
    color #fff
    border 1px solid #7DB408

  &:active
    background-color #6D9D08
    color #fff
    border 1px solid #6D9D08








